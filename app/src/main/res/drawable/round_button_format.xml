<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#6E6E6E" />
            <gradient android:angle="-90" android:startColor="#6E6E6E" android:endColor="#6E6E6E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#BCBCBC" />
            <solid android:color="#BCBCBC"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#BCBCBC" />
            <gradient android:angle="-90" android:startColor="#BCBCBC" android:endColor="#BCBCBC" />
        </shape>
    </item>
</selector>